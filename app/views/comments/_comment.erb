<%= comment.comment %><br>
<%= comment.user.name if comment.user.present? %>

<i>This comment was created <%= time_ago_in_words(comment.created_at) %></i>

<div class='commentsdelete'>
  <% if can? :destroy, @comment %>
  <%= link_to 'delete', comment_path(comment), method: :delete, confirm: 'Are you sure you would like to delete this recipe?' %>
  <% end %>

  <% if can? :update, @comment %>
  <%= link_to 'edit', edit_comment_path(comment) %>
  <% end %>
</div>


